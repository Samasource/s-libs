    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": ["ES2022", "dom"],
    "noEmit": true,
    "target": "ES2022",

    "baseUrl": "../lib",
    "experimentalDecorators": true,
    "paths": {
      "@sama/js-core": ["../../../../dist/js-core"],
      "@sama/micro-dash": ["../../../../dist/micro-dash"],
      "@sama/rxjs-core": ["../../../../dist/rxjs-core"]
    }
  }
}
